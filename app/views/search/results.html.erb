<div class="options">
Showing: <a id="filter_link" href="javascript:;"><%=@filter%></a>
<script>$("filter_link").observe("click", function(e){toggleWindow($("filter_box"),$$(".options")[0])});</script>
&nbsp;
&nbsp;
Sorting by: <a id="sort_link" href="javascript:;">Relevance</a>
<script>$("sort_link").observe("click", function(e){toggleWindow($("sort_box"),$$(".options")[0])});</script>
</div>
<div>
  <div class="result_entry_left">
    <div class="result_entry_name">
    name
    </div>
  </div>
  <div class="result_entry_middle">&nbsp;</div>
  <div class="result_entry_right">
    <div class="result_entry_date">
    date
    </div>
    <div class="result_entry_size">
    size
    </div>
  </div>
</div>
<% end %>
<%# end %>

<% if not @too_short %>
  <%= render "results" %>
<% else %>
<center><br><br>Queries must be longer than 2 characters.</center>
<% end %>
