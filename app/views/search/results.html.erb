<% content_for :header do %>
  <%= stylesheet_link_tag "results.css" %>
<% end %>

<% content_for :messages do %>
<div class="message_box filter_box" id="filter_box">
  <div class="content">
    <div class="label"><%= link_to "Folders", params.merge(:controller=>"search",:action=>"results",:filter => "Folders")%></div>
    <div class="label"><%= link_to "Video", params.merge(:controller=>"search",:action=>"results",:filter => "Video")%></div>
    <div class="label"><%= link_to "Audio", params.merge(:controller=>"search",:action=>"results",:filter => "Audio")%></div>
    <div class="label"><%= link_to "Applications", params.merge(:controller=>"search",:action=>"results",:filter => "Applications")%></div>
    <div class="label"><%= link_to "Images", params.merge(:controller=>"search",:action=>"results",:filter => "Images")%></div>
    <div class="label"><%= link_to "ISO's", params.merge(:controller=>"search",:action=>"results",:filter => "ISO's")%></div>
    <div class="label"><%= link_to "Text/Ebooks", params.merge(:controller=>"search",:action=>"results",:filter => "Text/Ebooks")%></div>
    <div class="label"><%= link_to "Archives", params.merge(:controller=>"search",:action=>"results",:filter => "Archives")%></div>
    <div class="full_label"><%= link_to "Everything", params.merge(:controller=>"search",:action=>"results",:filter => "All")%></div>
  </div>
</div>
<div class="message_box sort_box" id="sort_box">
  <div class="content">
    <div class="label">Relevance</div>
    <div class="choice">Up</div><div class="choice">Down</div>
    
    <div class="label">Name</div>
    <div class="choice">Up</div><div class="choice">Down</div>

    <div class="label">Size</div>
    <div class="choice">Up</div><div class="choice">Down</div>

    <div class="label">Date Added</div>
    <div class="choice">Up</div><div class="choice">Down</div>
  </div>
</div>
<% end %>

<% content_for :top do %>
  <%= render "search_bar" %>

<%
#Lables along the top of each column 
%>
